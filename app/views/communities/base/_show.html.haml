.show-community
  %nav{"aria-label" => "breadcrumb"}
    .bg-bar-community
      .container
        %ol.breadcrumb
          %li.breadcrumb-item
            %a.link-white{:href => "/"}
              %i.fas.fa-home
          %li.breadcrumb-item
            %a.link-white{:href => communities_path}= t('base.communities')
          %li.breadcrumb-item.active{"aria-current" => "page"}= @community.name
  .container
    %p#notice= notice
    %h2.text-left= @community.name
    %p
      %strong About:
      = @community.about
    %p
      %strong Address:
      = @community.address
    %p
      %strong Phone:
      = @community.phone
    %p
      %strong Email:
      = @community.email
    = link_to 'Edit', edit_community_path(@community)
    |
    = link_to 'Back', communities_path
