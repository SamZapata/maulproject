- client = DeviceDetector.new(request.user_agent)
- type = client.device_type == 'smartphone' ? 'smartphone' : 'base'

.communities

  = render "communities/#{type}/index"

-# %tbody
  - @communities.each do |community|
    %tr
      %td= community.name
      %td= community.about
      %td= community.address
      %td= community.phone
      %td= community.email
      %td= link_to 'Show', community
      %td= link_to 'Edit', edit_community_path(community)
      %td= link_to 'Destroy', community, method: :delete, data: { confirm: 'Are you sure?' }
      -# = link_to 'New Community', new_community_path
