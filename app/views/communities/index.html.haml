- client = DeviceDetector.new(request.user_agent)
- type = client.device_type == 'smartphone' ? 'smartphone' : 'base'

%p#notice= notice
%h1.text-center= link_to t('base.communities'), communities_path, alt: 'index communities', class: 'link-dark'

.d-flex.justify-content-center
  %ul#tabCommunities.nav.nav-tabs{:role => "tablist"}
    %li.nav-item
      %a#all-tab.nav-link.active{"aria-controls" => "all", "aria-selected" => "true", "data-toggle" => "tab", :href => "#all", :role => "tab"} Todas
    %li.nav-item
      %a#category-tab.nav-link{"aria-controls" => "category", "aria-selected" => "false", "data-toggle" => "tab", :href => "#category", :role => "tab"} CategorÃ­as
    %li.nav-item
      %a#comunas-tab.nav-link{"aria-controls" => "comunas", "aria-selected" => "false", "data-toggle" => "tab", :href => "#comunas", :role => "tab"} Comunas

= render "communities/#{type}/index"

