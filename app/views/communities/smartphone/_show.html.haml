
-# %nav{"aria-label" => "breadcrumb"}
  .breadcrumb.bg-primary
    .container
      %ol.breadcrumb.bg-primary
        -# %li.breadcrumb-item
          %a.link-dark{:href => "/"}
            %i.fas.fa-home
        %li.breadcrumb-item
          %a.link-dark{:href => communities_path}= t('base.communities')
        -# %li.breadcrumb-item.active{"aria-current" => "page"}= @community.name
.show-community
  .bg-bar-community
    .container
      %h2.text-left.link-white= @community.name

  .container
    %p#notice= notice
    / community image
    = image_tag 'https://42f2671d685f51e10fc6-b9fcecea3e50b3b59bdc28dead054ebc.ssl.cf5.rackcdn.com/illustrations/good_team_m7uu.svg', width: '50%'

    - missingData = []
    %p
      = @community.about
    = verifyFields @community
    - if @community.address.present?
      %p
        %strong Dirección:
        = @community.address
    - else
      - missingData << @community.address

    - if @community.phone.present?
      %p
        %strong Teléfono de contacto:
        = @community.phone
    - else
      - missingData << @community.phone

    - if @community.phone.present?
      %p
        %strong Correo electrónico:
        = @community.email
    - else
      - missingData << @community.email

    = link_to 'Edit', edit_community_path(@community)
    |
    = link_to 'Back', communities_path
