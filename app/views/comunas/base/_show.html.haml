.show-comuna
  %nav{"aria-label" => "breadcrumb"}
    .bg-bar-comuna
      .container
        %ol.breadcrumb
          %li.breadcrumb-item
            %a.link-dark{:href => "/"}
              %i.fas.fa-home
          %li.breadcrumb-item
            %a.link-dark{:href => '/'} Santiago de Cali
          %li.breadcrumb-item.active{"aria-current" => "page"}= @comuna.name

  .d-flex.justify-content-center
    %ul#tabComunasOp.nav.nav-tabs{:role => "tablist"}
      %li.nav-item
        %a#data-tab.nav-link.active{"aria-controls" => "data", "aria-selected" => "true", "data-toggle" => "tab", :href => "#data", :role => "tab"} Datos
      %li.nav-item
        %a#communities-tab.nav-link{"aria-controls" => "communities", "aria-selected" => "false", "data-toggle" => "tab", :href => "#communities", :role => "tab"} Comunidades
      %li.nav-item
        %a#sites-tab.nav-link{"aria-controls" => "sites", "aria-selected" => "false", "data-toggle" => "tab", :href => "#sites", :role => "tab"} Sitios
      %li.nav-item
        %a#events-tab.nav-link{"aria-controls" => "events", "aria-selected" => "false", "data-toggle" => "tab", :href => "#events", :role => "tab"} Eventos

    %p#notice= notice
    
  .container
    #tabComunasOpContent.tab-content
      #data.tab-pane.fade.show.active{"aria-labelledby" => "data-tab", :role => "tabpanel"}
        / comuna image
        -# = image_tag "base/elements_svg/undraw_reminder_pa79.svg", alt: 'image ', width: '50%'
        %p
          = @comuna.abotu
        .d-flex.justify-content-center
          = @comuna.map.html_safe
        -# = link_to 'Edit', edit_comuna_path(@comuna)

      #communities.tab-pane.fade{"aria-labelledby" => "communities-tab", :role => "tabpanel"} ...

      #sites.tab-pane.fade{"aria-labelledby" => "sites-tab", :role => "tabpanel"} ...

      #events.tab-pane.fade{"aria-labelledby" => "events-tab", :role => "tabpanel"} ...


