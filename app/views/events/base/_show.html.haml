.show-event
  %nav{"aria-label" => "breadcrumb"}
    .bg-bar-event
      .container
        %ol.breadcrumb
          %li.breadcrumb-item
            %a.link-white{:href => "/"}
              %i.fas.fa-home
          %li.breadcrumb-item
            %a.link-white{:href => events_path}= t('base.events')
          %li.breadcrumb-item.active{"aria-current" => "page"}= @event.name
  .container.text-center
    %p#notice= notice
    - if user_signed_in? && current_user.id == @event.user_id
      .show-event-edit
        = link_to edit_event_path(@event), class: 'link-dark' do
          %i.fa.fa-edit
    %h1.mt-3= @event.name
    %hr.mb-2
    %h4
      %i.fa.fa-calendar-check
      = @event.start_date.strftime("%d/%m/%Y")
      %i.fa.fa-clock
      = @event.start_date.strftime("%H:%M")

    .card-body.text-left
      %strong DescripciÃ³n
      .text-justify
        = @event.description
