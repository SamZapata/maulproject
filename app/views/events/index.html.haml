- client = DeviceDetector.new(request.user_agent)
- type = client.device_type == 'smartphone' ? 'smartphone' : 'base'

%p#notice= notice
%h1.text-center= link_to t('base.events'), events_path, alt: 'index events', class: 'link-dark'

