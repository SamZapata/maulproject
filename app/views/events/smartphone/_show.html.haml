
-# .show-event
  .bg-bar-event
    .container
      %h2.text-left.link-white= @event.name
.show-event
  %nav{"aria-label" => "breadcrumb"}
    .bg-bar-event
      .container
        %ol.breadcrumb
          %li.breadcrumb-item
            %a.link-white{:href => "/"}
              %i.fas.fa-home
          %li.breadcrumb-item
            %a.link-white{:href => events_path}= t('base.events')
          %li.breadcrumb-item.active{"aria-current" => "page"}= @event.name

  .container
    %p#notice= notice
    .container.text-center
      %p#notice= notice
      - if user_signed_in? && current_user.id == @event.user_id
        .show-event-edit
          = link_to edit_event_path(@event), class: 'link-dark' do
            %i.fa.fa-edit
      %h1.mt-3= @event.name
      %hr.mb-2
      %h4
        %i.fa.fa-calendar-check
        = @event.start_date.strftime("%d/%m/%Y")
        %i.fa.fa-clock
        = @event.start_date.strftime("%H:%M")
    / event image
    -# = image_tag "base/elements_svg/undraw_festivities_tvvj.svg", alt: 'image ', width: '50%'

    .card-body.text-left
      %strong Descripci√≥n
      .text-justify
        = @event.description
